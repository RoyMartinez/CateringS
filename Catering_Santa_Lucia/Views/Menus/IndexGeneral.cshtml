@model IEnumerable<Catering_Santa_Lucia.Models.Menu>

@{
    ViewData["Title"] = "Menus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Menus</h1>

@*<p>
    <a asp-action="Create">Nuevo Menu</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoNavigation.Descripcion)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a class="btn btn-success" asp-action="DetailsGeneral" asp-route-id="@item.Id">Detalles</a> 
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
